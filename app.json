{
  "expo": {
    "name": "barber-app",
    "slug": "barber-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-web-browser",
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to upload barber profile images."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/barber-app-logo.png"
        }
      ],
      "@react-native-firebase/app"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "android": {
      "permissions": ["android.permission.RECORD_AUDIO"],
      "package": "com.hussainhamim.barberapp",
      "googleServicesFile": "./android/app/google-services.json"
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "60a31e94-1ac3-4c6b-98c4-3f819732a355"
      }
    }
  }
}
